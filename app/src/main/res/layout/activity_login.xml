<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <LinearLayout
        android:id="@+id/username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.saic.visit.widget.ClearEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="@dimen/padding_24"
            android:hint="@string/login_username"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_16"
            android:paddingRight="@dimen/padding_5"
            android:paddingTop="@dimen/padding_32"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/white" />

        <com.saic.visit.widget.ClearEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/padding_24"
            android:hint="@string/login_password"
            android:imeActionId="@+id/login"
            android:inputType="textPassword"
            android:imeOptions="actionUnspecified"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_16"
            android:paddingTop="@dimen/padding_32"
            android:paddingRight="@dimen/padding_5"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/white" />
    </LinearLayout>
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_above="@id/username_layout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_height"
        android:src="@drawable/login_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/blue_button_bg_shape"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_super_huge" />
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_super_huge" />
    </LinearLayout>


</RelativeLayout>
