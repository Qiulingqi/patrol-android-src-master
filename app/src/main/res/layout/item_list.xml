<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/last_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_treenode_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingBottom="@dimen/padding_12"
        android:paddingLeft="47dp"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/padding_12"
        android:textColor="@color/main_item_time"
        android:textSize="@dimen/font_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_treenode_left"
            android:layout_width="@dimen/padding_5"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_24"
            android:background="@color/main_blue"/>

        <ImageView
            android:id="@+id/id_treenode_icon"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/padding_16"
            android:background="@drawable/blue_circle"/>

        <TextView
            android:id="@+id/id_treenode_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_12"
            android:paddingRight="@dimen/margin_16"
            android:paddingTop="@dimen/padding_12"
            android:textColor="@color/main_item_time"
            android:textSize="@dimen/font_size"/>

        <TextView
            android:id="@+id/id_treenode_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/padding_12"
            android:background="@drawable/blue_button"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_4"
            android:paddingLeft="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16"
            android:paddingTop="@dimen/padding_4"
            android:text="@string/add_visit_description"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_huge"/>

        <ImageView
            android:id="@+id/id_treenode_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"/>
    </LinearLayout>

    <TextView
        android:id="@+id/addflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue"
        android:layout_marginBottom="10dp"
        android:text="已取证"/>
</LinearLayout>