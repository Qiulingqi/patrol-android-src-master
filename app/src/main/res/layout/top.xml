<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:id="@+id/top"
    android:background="@color/main_blue" >
    
    <RelativeLayout
        android:id="@+id/rela_back"
        android:layout_width="@dimen/title_image_area"
        android:layout_height="match_parent" >
        <ImageView
           android:layout_width="@dimen/title_image_height"
           android:layout_height="@dimen/title_image_height"
           android:src="@drawable/back"
           android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela_right"
        android:layout_width="@dimen/title_image_area"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="@dimen/title_image_height"
            android:layout_height="@dimen/title_image_height"
            android:src="@drawable/main_logout"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView 
        android:id="@+id/txt_title"
        android:layout_toRightOf="@id/rela_back"
        android:layout_toLeftOf="@id/rela_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_super_huge"
        android:layout_centerInParent="true"
        android:text="@string/prompt_email"/>


    




</RelativeLayout>