<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_marginRight="@dimen/margin_16"
    android:background="@color/bg_gray_other"
    android:orientation="vertical">
    <com.saic.visit.widget.MTextViewItemQuestion
            android:id="@+id/visit_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/padding_5"
            android:layout_weight="1"
            android:textColor="@color/main_item_time"
            android:textSize="@dimen/font_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.saic.visit.widget.MTextViewItemQuestionOther
            android:id="@+id/visit_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/margin_8"
            android:paddingTop="@dimen/padding_5"
            android:paddingBottom="@dimen/padding_5"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_huge" />
        <RelativeLayout
            android:id="@+id/rela_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                />
        </RelativeLayout>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:text="@string/add_visit_reason"
            android:paddingBottom="@dimen/padding_5"
            android:textColor="@color/main_item_time"
            android:textSize="@dimen/font_size" />

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <!--<com.saic.visit.widget.MListView
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:scrollbars="none" />-->
        <LinearLayout
            android:id="@+id/GridHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.saic.visit.widget.MyGridView
                android:id="@+id/gview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                >
            </com.saic.visit.widget.MyGridView>

        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_gray"
        android:visibility="gone"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="备注："
        android:paddingBottom="@dimen/padding_5"
        android:textColor="@color/main_item_time"
        android:textSize="@dimen/font_size"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/edit_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/padding_12"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/font_size"
        android:visibility="gone"
        android:background="@drawable/gray_white_button"
        android:padding="@dimen/padding_5" />
</LinearLayout>