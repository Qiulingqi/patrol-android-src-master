<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <!-- 背景 -->
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/padding_5" />
            <stroke
                android:width="1dp"
                android:color="@color/gray"
                android:dashGap="@dimen/padding_5"
                android:dashWidth="@dimen/padding_5" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <!-- 背景 -->
            <solid android:color="@color/bg_gray_other" />
        </shape>
    </item>

</layer-list>